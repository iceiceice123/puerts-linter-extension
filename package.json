{
  "name": "typescript-linter",
  "displayName": "TypeScript Linter",
  "description": "A custom linter for TypeScript",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "typescript-linter.checkCurrentFile",
        "title": "TypeScript Linter: 检查当前文件"
      }
    ],
    "configuration": {
      "title": "TypeScript Linter",
      "properties": {
        "typescriptLinter.autoCheck": {
          "type": "boolean",
          "default": true,
          "description": "是否在保存文件时自动检查代码规范"
        },
        "typescriptLinter.rules": {
          "type": "object",
          "default": {
            "maxLineLength": 100,
            "indentSize": 2,
            "useSpaces": true,
            "semicolons": true,
            "quotes": "single",
            "noConsole": true,
            "noVar": true,
            "noAny": true,
            "noEmptyFunctions": true,
            "namingConvention": true,
            "functionEmptyLine": true
          },
          "description": "代码规范规则配置",
          "properties": {
            "maxLineLength": {
              "type": "number",
              "description": "最大行长度，超过此长度将给出警告"
            },
            "indentSize": {
              "type": "number",
              "description": "缩进大小，单位为空格数"
            },
            "useSpaces": {
              "type": "boolean",
              "description": "是否使用空格进行缩进，false表示使用制表符"
            },
            "semicolons": {
              "type": "boolean",
              "description": "是否要求语句末尾使用分号"
            },
            "quotes": {
              "type": "string",
              "enum": ["single", "double"],
              "description": "字符串引号风格，single表示单引号，double表示双引号"
            },
            "noConsole": {
              "type": "boolean",
              "description": "是否禁止使用console语句"
            },
            "noVar": {
              "type": "boolean",
              "description": "是否禁止使用var声明变量"
            },
            "noAny": {
              "type": "boolean",
              "description": "是否禁止使用any类型"
            },
            "noEmptyFunctions": {
              "type": "boolean",
              "description": "是否禁止使用空函数"
            },
            "namingConvention": {
              "type": "boolean",
              "description": "函数和变量的首字母必须小写，但是对于继承自UE的类首字母大写"
            },
            "functionEmptyLine": {
              "type": "boolean",
              "description": "函数实现的首行跟函数名之间空一行"
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}
